        function getCurrentDay() {
            const days = ['Domenica', 'Luned√¨', 'Marted√¨', 'Mercoled√¨', 'Gioved√¨', 'Venerd√¨', 'Sabato'];
            return days[new Date().getDay()];
        }
        
        function getCurrentTime() {
            const now = new Date();
            return now.getHours().toString().padStart(2, '0') + ':' + now.getMinutes().toString().padStart(2, '0');
        }
        
        function timeToMinutes(timeStr) {
            const [hours, minutes] = timeStr.split(':').map(Number);
            return hours * 60 + minutes;
        }
        
        function isTimeInRange(currentTime, startTime, endTime) {
            const current = timeToMinutes(currentTime);
            const start = timeToMinutes(startTime);
            const end = timeToMinutes(endTime);
            return current >= start && current <= end;
        }
        
        function findAvailableNow() {
            const currentDay = getCurrentDay();
            const currentTime = getCurrentTime();
            const available = [];
            
            for (const [doctor, locations] of Object.entries(doctorsSchedule)) {
                for (const [location, schedule] of Object.entries(locations)) {
                    if (schedule[currentDay]) {
                        for (const slot of schedule[currentDay]) {
                            if (isTimeInRange(currentTime, slot.start, slot.end)) {
                                available.push({
                                    doctor: doctor,
                                    location: location,
                                    until: slot.end
                                });
                                break;
                            }
                        }
                    }
                }
            }
            
            const resultDiv = document.getElementById('availability-result');
            const contentDiv = document.getElementById('availability-content');
            
            let html = '';
            
            if (available.length === 0) {
                html = `
                    <div style="text-align: center; color: #e74c3c; padding: 20px;">
                        <div style="font-size: 2em; margin-bottom: 10px;">üî¥</div>
                        <div><strong>Nessun medico disponibile ora</strong></div>
                        <div style="font-size: 0.9em; margin-top: 10px; color: #7f8c8d;">
                            Oggi √® ${currentDay} alle ${currentTime}
                        </div>
                    </div>
                `;
            } else {
                html = '<div style="color: #27ae60; font-weight: 500; margin-bottom: 15px;">‚úÖ Medici disponibili ORA:</div>';
                available.forEach(doc => {
                    const phoneNumbers = {
                        'Dott.ssa FORNACIARI': '+393203952236',
                        'Dott.ssa GOVI': '+393388024416', 
                        'Dott.ssa MANFREDINI': '+393387402274',
                        'Dott.ssa MOSCHINI': '+393356912849'
                    };
                    html += `
                        <div class="contact-item">
                            <div>
                                <div class="contact-name">${doc.doctor}</div>
                                <div style="font-size: 0.8em; color: #27ae60;">üìç ${doc.location} ‚Ä¢ Fino alle ${doc.until}</div>
                            </div>
                            <button onclick="callDoctor('${doc.doctor}', '${phoneNumbers[doc.doctor]}')" class="phone-btn">üìû Chiama</button>
                        </div>
                    `;
                });
            }
            
            contentDiv.innerHTML = html;
            resultDiv.style.display = 'block';
        }
        
        function showWaitCalculator() {
            const currentDay = getCurrentDay();
            const currentTime = getCurrentTime();
            const waitDiv = document.getElementById('wait-calculator');
            const waitTimeDiv = document.getElementById('wait-time');
            
            const currentMinutes = timeToMinutes(currentTime);
            let nextAvailable = null;
            let minWait = Infinity;
            
            for (const [doctor, locations] of Object.entries(doctorsSchedule)) {
                for (const [location, schedule] of Object.entries(locations)) {
                    if (schedule[currentDay]) {
                        for (const slot of schedule[currentDay]) {
                            const startMinutes = timeToMinutes(slot.start);
                            if (currentMinutes < startMinutes) {
                                const wait = startMinutes - currentMinutes;
                                if (wait < minWait) {
                                    minWait = wait;
                                    nextAvailable = {
                                        doctor: doctor,
                                        location: location,
                                        time: slot.start,
                                        wait: wait
                                    };
                                }
                            }
                        }
                    }
                }
            }
            
            if (nextAvailable) {
                const hours = Math.floor(minWait / 60);
                const minutes = minWait % 60;
                let waitText = hours > 0 ? `${hours}h ${minutes}min` : `${minutes} minuti`;
                
                waitTimeDiv.innerHTML = `
                    <div>${waitText} circa</div>
                    <div style="font-size: 0.9em; margin-top: 5px; opacity: 0.9;">
                        Prossimo disponibile: ${nextAvailable.doctor}<br>
                        üìç ${nextAvailable.location} alle ${nextAvailable.time}
                    </div>
                `;
            } else {
                waitTimeDiv.innerHTML = 'Nessun orario disponibile oggi';
            }
            
            waitDiv.style.display = 'block';
            setTimeout(() => {
                waitDiv.style.display = 'none';
            }, 5000);
        }
        
        function callDoctor(doctorName, phoneNumber) {
            // Registra chiamata
            const callHistory = appStorage.callHistory || [];
            const now = new Date();
            const timeStr = now.getHours().toString().padStart(2, '0') + ':' + now.getMinutes().toString().padStart(2, '0');
            
            callHistory.unshift({
                doctor: doctorName,
                time: timeStr,
                date: now.toLocaleDateString('it-IT')
            });
            
            if (callHistory.length > 10) {
                callHistory.splice(10);
            }
            
            appStorage.callHistory = callHistory;
            updateCallHistory();
            
            // Effettua chiamata
            window.location.href = `tel:${phoneNumber}`;
        }
        
        function callStudio(studioName, phoneNumber) {
            // Registra chiamata
            const callHistory = appStorage.callHistory || [];
            const now = new Date();
            const timeStr = now.getHours().toString().padStart(2, '0') + ':' + now.getMinutes().toString().padStart(2, '0');
            
            callHistory.unshift({
                doctor: `Studio ${studioName}`,
                time: timeStr,
                date: now.toLocaleDateString('it-IT')
            });
            
            if (callHistory.length > 10) {
                callHistory.splice(10);
            }
            
            appStorage.callHistory = callHistory;
            updateCallHistory();
            
            // Effettua chiamata
            window.location.href = `tel:${phoneNumber}`;
        }
        
        function updateCallHistory() {
            const callHistory = appStorage.callHistory || [];
            const listDiv = document.getElementById('call-history-list');
            
            if (callHistory.length === 0) {
                listDiv.innerHTML = '<div style="text-align: center; color: #7f8c8d; font-style: italic; padding: 20px;">Nessuna chiamata registrata oggi</div>';
                return;
            }
            
            let html = '';
            callHistory.forEach(call => {
                html += `
                    <div class="history-item">
                        <div>
                            <div style="font-weight: 500;">${call.doctor}</div>
                            <div class="history-time">${call.date}</div>
                        </div>
                        <div class="history-time">${call.time}</div>
                    </div>
                `;
            });
            
            listDiv.innerHTML = html;
        }
        
        function saveNotes() {
            const notes = document.getElementById('personal-notes').value;
            appStorage.personalNotes = notes;
            
            const btn = event.target;
            const originalText = btn.textContent;
            btn.textContent = '‚úÖ Salvato!';
            btn.style.background = '#27ae60';
            
            setTimeout(() => {
                btn.textContent = originalText;
                btn.style.background = '#3498db';
            }, 2000);
        }
        
        function loadNotes() {
            const notes = appStorage.personalNotes || '';
            document.getElementById('personal-notes').value = notes;
        }
        
        function setReminder() {
            const time = prompt('‚è∞ A che ora vuoi essere ricordato? (es: 14:30)');
            if (time && /^\d{1,2}:\d{2}$/.test(time)) {
                appStorage.reminder = {
                    time: time,
                    date: new Date().toLocaleDateString('it-IT')
                };
                updateReminderDisplay();
                alert('‚úÖ Promemoria impostato per le ' + time);
            } else if (time) {
                alert('‚ùå Formato ora non valido. Usa HH:MM');
            }
        }
        
        function updateReminderDisplay() {
            const reminder = appStorage.reminder;
            const reminderDiv = document.getElementById('next-reminder');
            
            if (reminder) {
                reminderDiv.textContent = `${reminder.date} alle ${reminder.time}`;
            } else {
                reminderDiv.textContent = 'Nessuno attivo';
            }
        }
        
        function showDirections() {
            alert('üó∫Ô∏è Vai nella sezione Strumenti per le indicazioni stradali!');
            showTab('tools');
        }
        
        function clearCallHistory() {
            if (confirm('üóëÔ∏è Vuoi cancellare la cronologia chiamate?')) {
                appStorage.callHistory = [];
                updateCallHistory();
                alert('‚úÖ Cronologia cancellata!');
            }
        }
        
        function exportNotes() {
            const notes = appStorage.personalNotes || '';
            if (!notes.trim()) {
                alert('üìù Non ci sono note da esportare');
                return;
            }
            
            const today = new Date().toLocaleDateString('it-IT');
            const exportText = `Note Studio Medico - ${today}\n\n${notes}`;
            
            if (navigator.clipboard) {
                navigator.clipboard.writeText(exportText).then(() => {
                    alert('üìã Note copiate negli appunti!');
                });
            } else {
                alert('üìù Note:\n\n' + exportText);
            }
        }
        
        function updateStatusBanner() {
            const banner = document.getElementById('status-banner');
            const currentDay = getCurrentDay();
            const currentTime = getCurrentTime();
            const current = timeToMinutes(currentTime);
            
            // Orario guardia medica
            if (current >= timeToMinutes('20:00') || current < timeToMinutes('08:00')) {
                banner.className = 'status-banner emergency';
                banner.innerHTML = 'üö® ORARIO GUARDIA MEDICA - Chiama 116117 per urgenze';
                return;
            }
            
            // Controlla disponibilit√† medici
            let anyoneAvailable = false;
            for (const [doctor, locations] of Object.entries(doctorsSchedule)) {
                for (const [location, schedule] of Object.entries(locations)) {
                    if (schedule[currentDay]) {
                        for (const slot of schedule[currentDay]) {
                            if (isTimeInRange(currentTime, slot.start, slot.end)) {
                                anyoneAvailable = true;
                                break;
                            }
                        }
                    }
                    if (anyoneAvailable) break;
                }
                if (anyoneAvailable) break;
            }
            
            if (anyoneAvailable) {
                banner.className = 'status-banner';
                banner.innerHTML = 'üü¢ Medici disponibili ora - Tocca "Chi √® Disponibile ORA?" per dettagli';
            } else {
                banner.className = 'status-banner closed';
                banner.innerHTML = 'üî¥ Nessun medico disponibile ora - Controlla gli orari';
            }
        }
        
        function showTab(tabName) {
            // Nascondi tutti i contenuti
            const tabs = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Rimuovi classe active da tutti i pulsanti
            const buttons = document.querySelectorAll('.nav-tab');
            buttons.forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Mostra il contenuto selezionato
            document.getElementById(tabName).classList.add('active');
            
            // Attiva il pulsante corrispondente
            event.target.classList.add('active');
        }
        
        // Inizializzazione
        document.addEventListener('DOMContentLoaded', function() {
            updateStatusBanner();
            updateCallHistory();
            loadNotes();
            updateReminderDisplay();
            
            // Aggiorna ogni minuto
            setInterval(updateStatusBanner, 60000);
